<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkillPresentation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="bottomAppBarStyle">@style/BottomAppBarStyle</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="cardViewStyle">@style/CardViewStyle</item>
    </style>

    <style name="BottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar.Colored" />

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

</resources>