<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/usersFragment">

    <fragment
        android:id="@+id/usersFragment"
        android:name="ru.zmeytee.networkingsample.ui.users.UsersFragment"
        android:label="UsersFragment"
        tools:layout="@layout/fragment_users">
        <action
            android:id="@+id/action_usersFragment_to_userDetailsFragment"
            app:destination="@id/userDetailsFragment" />
        <action
            android:id="@+id/action_usersFragment_to_userAddFragment"
            app:destination="@id/userAddFragment" />
    </fragment>

    <fragment
        android:id="@+id/userDetailsFragment"
        android:name="ru.zmeytee.networkingsample.ui.userdetails.UserDetailsFragment"
        android:label="UserDetailsFragment"
        tools:layout="@layout/fragment_user_details">
        <argument
            android:name="userId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/userAddFragment"
        android:name="ru.zmeytee.networkingsample.ui.useradd.UserAddFragment"
        android:label="UserAddFragment"
        tools:layout="@layout/fragment_user_add" />
</navigation>